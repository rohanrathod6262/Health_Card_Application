<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="20dp"
        android:outlineSpotShadowColor="@android:color/black"
        android:id="@+id/card"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:id="@+id/linearlayout"
            >
            <TextView
                android:id="@+id/docname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. N.P. Taware"
                android:layout_marginTop="10dp"

                android:textSize="20dp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textColor="#FA0766"
                android:fontFamily="serif">
            </TextView>
            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0288D1"
                android:text="M.B.B.S, M.D"
                android:textAllCaps="true"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00AM - 05.00PM"
                android:textSize="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/ic_stopwatch">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon - Sat"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:layout_marginLeft="3dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_call"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:textSize="15dp"
                android:text="9307121463"
                android:id="@+id/phone"
                android:drawablePadding="10dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32BEA6"
                android:text="Available"
                android:textSize="15dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_marginLeft="180dp"
                android:drawableLeft="@drawable/ic_checked"
                android:layout_marginTop="-40dp"
                android:drawablePadding="10dp"></TextView>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Print"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_border"
                android:layout_marginLeft="2dp"
                android:shadowColor="@android:color/holo_blue_dark"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="bold"></Button>


            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginLeft="180dp"
                android:src="@drawable/docotorimg"
                android:layout_marginTop="-200dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>